= bootstrap_form_for @cms_block do |f|
  - if @cms_block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cms_block.errors.count, "error")} prohibited this cms_block from being saved:"
      %ul
        - @cms_block.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :name
  .field
    = f.text_area :content
  .actions
    = f.submit 'Save'
