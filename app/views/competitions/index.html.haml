%h1 Listing competitions

%table.table
  %thead
    %tr
      %th Order
      %th Code
      %th Name
      %th Type
      %th
      %th
      %th
      
  %tbody
    - @competitions.each do |competition|
      %tr
        %td= competition.order_number
        %td= competition.code
        %td= competition.name
        %td= competition.type
        %td= link_to 'Show', competition
        %td= link_to 'Edit', edit_competition_path(competition)
        %td= link_to 'Destroy', competition, :method => :delete, :data => { :confirm => 'Are you sure?' }

